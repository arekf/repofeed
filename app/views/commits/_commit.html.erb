<div class="list-group-item">
  <div class="d-flex w-100 justify-content-between">
    <%= link_to commit.url do %>
      <h5 class="mb-1" title="<%= commit.message_subject %>">
        <%= commit.message_subject.truncate(90) %>
      </h5>
    <% end %>
  </div>

  <div class="w-100">
    <pre><%= commit.message_body %></pre>
  </div>

  <small class="text-muted">
    <span title="<%= commit.commited_at.strftime('%Y-%m-%d %H:%M:%S') %>">
      <%= time_ago_in_words(commit.commited_at) %> ago
    </span>
    by
    <%= image_tag commit.author_avatar_url, width: 16, height: 16 %>
    <%= mail_to commit.author_email, commit.author_name %>
  </small>
</div>
