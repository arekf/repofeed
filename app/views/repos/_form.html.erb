<%= form_with(model: repo, local: true, class: 'form-inline') do |form| %>
    <% if repo.errors %>
        <div class="mb-2 w-100">
          <%= repo.errors.full_messages.join(', ') %>
        </div>
    <% end %>
  <div class="form-check mr-sm-2">
    <div class="field <%= 'has-danger' if repo.errors[:owner].present? %>">
      <%= form.text_field :owner, placeholder: 'owner (ex. rails)', class: 'form-control form-control-danger' %>
    </div>

    <div class="ml-sm-2 mr-sm-2">/</div>

    <div class="field mr-sm-2 mb-2 mb-sm-0 <%= 'has-danger' if repo.errors[:name].present? %>">
      <%= form.text_field :name, placeholder: 'name (ex. sprockets)', class: 'form-control form-control-danger' %>
    </div>

    <div class="field">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
